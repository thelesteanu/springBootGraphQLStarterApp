###### Queries
type Query {
    authors: [Author]
    authorById(id: ID!): Author

#    findAwesomeBookById(id: ID!): Book
#    findAwesomeBookByTitle(title: String!): Book
}

type Author{
    id: ID!
    name: String!
    books: [Book]
    bestSellerNumber: Int
}
type Book{
    id: ID!
    title: String!
    publisher: String
}









###### Mutations
type Mutation{
    sayHi(name:String):String
    addBook(book: BookInput): Book
}
input BookInput{
    title: String!
    publisher: String
    authorId: ID
}











